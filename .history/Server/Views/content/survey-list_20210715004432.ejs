

<body style="background-color:#ABEBC6">
<h1>Survey List</h1>

<div class="row">
    <div class="col">
        
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                
                <th scope="col">Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                
              <!-- Repeatable Row Template -->

              <% for(let count = 0; count < surveys.length; count++) { %>
              
              <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= surveys[count].title %> </td>
                <td><a href="/survey-list/<%=surveys[count]._id%>" class="btn btn-danger btn-sm"><i class="fa fa-eraser"></i> View</a><td>
              </tr>

              <% } %>
             
            </tbody>
          </table>


    </div>
</div>