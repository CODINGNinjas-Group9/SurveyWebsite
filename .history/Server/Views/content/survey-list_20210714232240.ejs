<h1>Clothing List</h1>

<div class="row">
    <div class="col">
        <a href="/survey-list/edit" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Clothing</a>
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
                
              <!-- Repeatable Row Template -->

              <% for(let count = 0; count < surveys.length; count++) { %>
              
              <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= surveys[count].title %> </td>
              </tr>

              <% } %>
             
            </tbody>
          </table>


    </div>
</div>