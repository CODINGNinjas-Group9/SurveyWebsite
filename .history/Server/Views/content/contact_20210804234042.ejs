<body style="background-color: #abebc6">
   <div class="row">
      <h1 class="headerText"><strong>Please provide your details in-order to contact you</h1>
      </br>
      </br>
      </br>
      <form method="POST" id="contactForm" novalidate>

         <div class="form-group">
            <div class="row">
               <div class="col-md-6">
                  <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name"
                     required>
               </div>
               <div class="col-md-6">
                  <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name"
                     required>
               </div>
            </div>
            </br>
            <div class="row">
               <div class="col-md-6">
                  <input type="email" class="form-control" id="emailAddress" name="emailAddress" required value=""
                     placeholder="Email Address" required>
               </div>
               <div class="col-md-6">
                  <input type="text" class="form-control" id="contactNumber" name="contactNumber" required value=""
                     placeholder="Contact Number">
               </div>
            </div>
            </br>
            <div class="row">
               <div class="column">
                  <textarea type="text" class="form-control" id="inputMessage" name="inputMessage" rows="2"
                     placeholder="Type your message here"></textarea>
               </div>
            </div>
         </div>

         <div class="text-end mt-2">
            <button id="submitButton" type="submit" class="btn btn-primary"
               style="background-color:#1E8449">Submit</button>
         </div>
      </form>
   </div>